# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Price IDs - BGN (Bulgarian Lev)
# Create these in Stripe Dashboard with BGN currency
STRIPE_BASIC_PRICE_ID_BGN=price_xxx_bgn
STRIPE_ULTIMATE_PRICE_ID_BGN=price_yyy_bgn

# Stripe Price IDs - EUR (Euro)
# Create these in Stripe Dashboard with EUR currency
STRIPE_BASIC_PRICE_ID_EUR=price_xxx_eur
STRIPE_ULTIMATE_PRICE_ID_EUR=price_yyy_eur

# Legacy variables (backward compatibility - use BGN as default)
STRIPE_BASIC_PRICE_ID=price_xxx_bgn
STRIPE_ULTIMATE_PRICE_ID=price_yyy_bgn

# Email (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
# Email address verified in Resend dashboard
RESEND_FROM_EMAIL=Vrachka <noreply@vrachka.eu>

# Viber Bot API (for blog post notifications)
# Get your auth token from Viber Admin Panel
# Used to send automatic notifications to your Viber channel when new blog posts are published
VIBER_AUTH_TOKEN=your_viber_auth_token_here
# Optional: Channel ID will be fetched automatically using get_account_info API
# If you have it, you can set it here to skip the API call
VIBER_CHANNEL_ID=

# App
NEXT_PUBLIC_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Cron Jobs Security
# Generate a random secret for Vercel Cron authentication
# Example: openssl rand -base64 32
CRON_SECRET=your_random_secret_here

# Supabase Cron Jobs (for daily horoscope generation)
# Use same value as CRON_SECRET or generate a separate one
# Used by: supabase/functions/generate-daily-horoscopes
CRON_SECRET_KEY=your_random_secret_here

# ===================================================================
# VERCEL CRON JOBS CONFIGURED IN vercel.json:
# ===================================================================
# 1. /api/cron/daily-reminders - Daily at 8:00 AM UTC (0 8 * * *)
# 2. /api/cron/weekly-digest - Mondays at 9:00 AM UTC (0 9 * * 1)
#    Sends weekly horoscope digest to premium users
# 3. /api/cron/upsell-campaign - Wednesdays at 10:00 AM UTC (0 10 * * 3)
#    Sends upgrade offers to free tier users (active in last 7 days)
# 4. /api/cron/renewal-reminder - Daily at 8:00 AM UTC (0 8 * * *)
#    Reminds users 3 days before subscription renewal
# 5. /api/cron/trial-expiring - Daily at 9:00 AM UTC (0 9 * * *)
#    Reminds users 1 day before trial expires
# ===================================================================
